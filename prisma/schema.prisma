generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id String @id @deafult(uuid())
  name String
  type TransactionType
  amount Decimal @db.decimal(10,2)
}

enum TransactionType {
  DEPOSIT
  EXPENSE
  INVESTMENT
}
